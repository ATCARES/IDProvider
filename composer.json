{
	"name"       : "gesinn-it/id-provider",
	"type"       : "mediawiki-extension",
	"description": "IDProvider is an extension to MediaWiki that provides (unique) IDs using different ID algorithms.",
	"keywords"   : [
		"wiki",
		"MediaWiki",
		"extension",
		"Service",
		"ID",
		"UUID"
	],
	"homepage"   : "https://github.com/gesinn-it/IDProvider",
	"license"    : "MIT",
	"authors"    : [
		{
			"name" : "Simon Heimler",
			"email": "heimlersimon@gmail.com",
			"role" : "Developer"
		}
	],
    "minimum-stability": "dev",
	"require": {
		"php"                : ">=5.3.0",
		"composer/installers": "1.*,>=1.0.1"
	},
    "require-dev": {

    },
    "scripts": {
      "test": [
        "parallel-lint . --exclude vendor",
        "phpcs . -v --standard=vendor/mediawiki/mediawiki-codesniffer/MediaWiki --ignore=vendor/*,node_modules/* --extensions=php"
      ]
    },
	"autoload"   : {
		"files": [
			"IDProvider.php"
		]
	}
}
